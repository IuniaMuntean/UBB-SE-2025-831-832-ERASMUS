<Page
    x:Class="UBB_SE_2025_EUROTRUCKERS.Views.OrdersView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:viewmodels="using:UBB_SE_2025_EUROTRUCKERS.ViewModels"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=viewmodels:OrderViewModel, IsDesignTimeCreatable=True}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Add Button -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10">
            <TextBlock Text="Orders Management" 
                      FontSize="24" 
                      FontWeight="SemiBold"/>
            <Button Content="Add New Order" 
                    Command="{Binding AddOrderCommand}"
                    Margin="20,0,0,0"
                    Padding="15,5"/>
        </StackPanel>

        <!-- Orders List -->
        <controls:ItemsRepeater Grid.Row="1" 
                               ItemsSource="{Binding Orders}"
                               Margin="0,20,0,0">
            <controls:ItemsRepeater.Layout>
                <controls:UniformGridLayout ItemsStretch="Fill"
                                          MinItemWidth="300"
                                          MaximumRowsOrColumns="3"/>
            </controls:ItemsRepeater.Layout>
            
            <DataTemplate>
                <Border Background="#C0000000"
                        BorderBrush="{ThemeResource CardStrokeColorDefault}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="15"
                        Margin="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Order Info -->
                        <StackPanel Grid.Row="0">
                            <TextBlock Text="{Binding ClientName}"
                                      FontSize="18"
                                      FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding CargoType}"
                                      Style="{ThemeResource BodyTextBlockStyle}"/>
                            <TextBlock Text="{Binding CargoWeight, StringFormat='Weight: {0} kg'}"
                                      Style="{ThemeResource BodyTextBlockStyle}"/>
                        </StackPanel>

                        <!-- Cities -->
                        <StackPanel Grid.Row="1" Margin="0,10,0,0">
                            <TextBlock Text="{Binding SourceCity.name}"
                                      Style="{ThemeResource BodyTextBlockStyle}"/>
                            <SymbolIcon Symbol="Forward" HorizontalAlignment="Right"/>
                            <TextBlock Text="{Binding DestinationCity.name}"
                                      Style="{ThemeResource BodyTextBlockStyle}"/>
                        </StackPanel>

                        <!-- Action Buttons -->
                        <StackPanel Grid.Row="2" 
                                  Orientation="Horizontal" 
                                  HorizontalAlignment="Right"
                                  Margin="0,10,0,0"
                                  Spacing="10">
                            <Button Content="Edit"
                                    Command="{Binding UpdateOrderCommand}"
                                    CommandParameter="{Binding}"/>
                            <Button Content="Delete"
                                    Command="{Binding DeleteOrderCommand}"
                                    CommandParameter="{Binding}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </DataTemplate>
        </controls:ItemsRepeater>
    </Grid>
</Page> 