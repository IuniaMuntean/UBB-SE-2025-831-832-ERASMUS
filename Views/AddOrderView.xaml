<Page
    x:Class="UBB_SE_2025_EUROTRUCKERS.Views.AddOrderView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:viewmodels="using:UBB_SE_2025_EUROTRUCKERS.ViewModels"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=viewmodels:OrderViewModel, IsDesignTimeCreatable=True}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10">
            <Button Content="← Back" 
                    Click="OnBackClicked"
                    Margin="0,0,20,0"/>
            <TextBlock Text="{Binding IsEditMode, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Edit Order|Add New Order'}" 
                      FontSize="24" 
                      FontWeight="SemiBold"/>
        </StackPanel>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" Margin="0,20,0,0">
            <StackPanel Spacing="20" MaxWidth="600">
                <!-- Client Name -->
                <controls:TextBox Header="Client Name"
                                PlaceholderText="Enter client name"
                                Text="{Binding NewOrder.ClientName, Mode=TwoWay}"/>

                <!-- Cargo Type -->
                <controls:TextBox Header="Cargo Type"
                                PlaceholderText="Enter cargo type"
                                Text="{Binding NewOrder.CargoType, Mode=TwoWay}"/>

                <!-- Cargo Weight -->
                <controls:NumberBox Header="Cargo Weight (kg)"
                                  PlaceholderText="Enter weight"
                                  Value="{Binding NewOrder.CargoWeight, Mode=TwoWay}"/>

                <!-- Source City -->
                <controls:ComboBox Header="Source City"
                                 ItemsSource="{Binding AvailableCities}"
                                 SelectedItem="{Binding NewOrder.SourceCity, Mode=TwoWay}">
                    <controls:ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding name}"/>
                        </DataTemplate>
                    </controls:ComboBox.ItemTemplate>
                </controls:ComboBox>

                <!-- Destination City -->
                <controls:ComboBox Header="Destination City"
                                 ItemsSource="{Binding AvailableCities}"
                                 SelectedItem="{Binding NewOrder.DestinationCity, Mode=TwoWay}">
                    <controls:ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding name}"/>
                        </DataTemplate>
                    </controls:ComboBox.ItemTemplate>
                </controls:ComboBox>

                <!-- Submit Button -->
                <Button Content="{Binding IsEditMode, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Update Order|Create Order'}"
                        Click="OnSubmitClicked"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0"
                        Padding="20,10"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page> 